<%= form_for(@event) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :date %>
  <%= f.datetime_select :date, datetime_separator: "", order: [:month, :day, :year], start_year: Time.current.year, prompt: { month: "Month", day: "Day", year: "Year" } %>
  <%= f.submit "Submit" %>
<% end %>